<%= form_for @user, :url => {:action => 'update_password'} do |f| %>
<h1>ユーザー情報変更</h1>

<table border="1">
   <tr>
     <div class="field">
       <td>
         <%= label_tag :password, 'パスワード' %>
       </td>
       <td>
         <%= text_field_tag :password, '' %>
       </td>
     </div>
   </tr>
</table>

  <div class="actions">
    <%= f.submit :変更%>
  </div>

<%= link_to 'キャンセル', users_path %>
<% end %>