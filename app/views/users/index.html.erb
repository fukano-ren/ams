<% if session[:system] == true %>
  <p id="notice"><%= notice %></p>

  <h1>ユーザー情報一覧</h1> 

    <div align=right style="margin-top:-34px"><div style="margin-right:385px">
      <%= link_to "ログアウト" , controller: :login, action: :index %>
    </div></div>

  <p>&nbsp;</p>

  <%= form_tag({:action=>"search"},{:method=>"GET"}) do %>
    <table border="1">
      <tr>
        <th width="70" height="30" align="right" style="padding-right:15px ">コード</th>
        <th style="padding-right:15px "><div style="padding-left:7px"><%= text_field_tag "search[code]" %></div></th>
      </tr>
      <tr>
        <th width="70" height="30" align="right" style="padding-right:15px ">氏 名</th>
        <th style="padding-right:15px"><div style="padding-left:7px"><%= text_field_tag "search[name]" %></div></th>
      </tr> 
      <tr>
        <th width="70" height="30" align="right" style="padding-right:15px ">部 署</th>
        <th align="left" style="padding-right:15px "><div style="padding-left:7px"><%= collection_select(
        "search", "department_id", Department.all, :id, :name, :prompt => "すべて") %></div></th>
      </tr>
    </table>
    <div style="margin-left:315px"><div style="margin-top:-22px"><%= submit_tag "検索" %></div></div>
  <% end %>

  <p>&nbsp;</p>
  
  <div style="margin-right:535px">
    <% if controller.action_name == "search" %>
      <%= "検索結果：#{@users.count}件" %>
    <% else %>
      <%= "検索結果：0件" %>
    <% end %>
  </div>
  <div style="margin-left:535px"><div style="margin-top:-20px"><%= paginate @users %></div></div>
  <table border="1">
    <thead>
      <tr>
        <th align=center width="70" height="30">コード</th>
        <th align=center width="120" height="30">氏名</th>
        <th align=center width="120" height="30">部署</th>
        <th align=center width="100" height="30">システム管理</th>
        <th align=center width="70" height="30">資産管理</th>
        <th align=center width="120" height="30" colspan="3">アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td align=center height="30"><%= user.code %></td>
          <td align=center height="30"><%= user.name %></td>
          <td align=center height="30"><%= user.department.try(:name) %></td>
          <td align=center height="30">
            <% if user.system == true %>
              ○
            <% else %>
              
            <% end %>
          </td>
          <td align=center height="30">
            <% if user.admin == true %>
              ○
            <% else %>
              
            <% end %>
          </td>
          <td align=center height="30">
          <%= link_to '詳細', user %>
          <%= link_to '変更', edit_user_path(user) %>
          <%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>&nbsp;</p>

  <div style="margin-right:530px"><%= link_to '新規ユーザー登録', new_user_path %></div>
  <div align="center" style="margin-top:-17px"><%= link_to '一括変更', users_zen_edit_path %></div>
  <div style="margin-left:540px"><div style="margin-top:-17px"><%= link_to 'メニューに戻る', menu_index_path %></div></div>

<% else %>

  <p id="notice"><%= notice %></p>
    <div align=right>
      <%= link_to "ログアウト" , controller: :login, action: :index %>
    </div>

  <h1>ユーザー情報一覧</h1>


  <%= form_tag({:action=>"search"},{:method=>"GET"}) do %>
    <%= text_field_tag "search[title]" %>
    <%= submit_tag "検索" %>
  <% end %>
  <div style="margin-left:335px"><%= paginate @users %></div>
  <table border="1">
    <thead>
      <tr>
        <th align=center width="100" height="30">コード</th>
        <th align=center width="100" height="30">氏名</th>
        <th align=center width="100" height="30">部署</th>
        <th align=center width="120" height="30" colspan="3">アクション</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% if user.name == session[:name] %>
          <tr>
            <td align=center height="30"><%= user.code %></td>
            <td align=center height="30"><%= user.name %></td>
            <td align=center height="30"><%= user.department.try(:name) %></td>
            <td align=center height="30">
              <%= link_to '詳細', user %>
              <%= link_to '変更', edit_user_path(user) %>
              <%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% else %>
          <tr>
            <td align=center height="30"><%= user.code %></td>
            <td align=center height="30"><%= user.name %></td>
            <td align=center height="30"><%= user.department.try(:name) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <p>&nbsp;</p>

  <%= link_to '新規ユーザー登録', new_user_path %>
  <%= link_to 'メニューに戻る', menu_index_path %>

<% end %>