<div align=right>
  <%= link_to "ログアウト" , controller: :login, action: :index %>
</div>

<h1>ユーザー情報一括変更</h1>

<%= form_tag({:action=>"zen_search"},{:method=>"GET"}) do %>
  <table border="1">
    <tr>
      <th>コード</th>
      <th><%= text_field_tag 'session[:code]' %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= text_field_tag "search[name]" %></th>
    </tr> 
    <tr>
      <th>部署</th>
      <th><%= collection_select("search", "department_id", Department.all, :id, :name, :prompt => "すべて") %></th>
    </tr>
  </table>
  <div><%= submit_tag "検索" %></div>
<% end %>

<div style="margin-right:535px">
  <% if controller.action_name == "zen_search" %>
    <%= "検索結果：#{@users.count}件" %>
  <% else %>
    <%= "検索結果：0件" %>
  <% end %>
</div>

<div style="margin-left:535px"><%= paginate @users %></div>
<%= form_tag users_zen_update_path,method: :put do %>
<%= submit_tag '更新' %>
<table border="1">
  <thead>
    <tr>
      <th align=center width="70" height="30">コード</th>
      <th align=center width="70" height="30">氏名</th>
      <th align=center width="70" height="30">パスワード</th>
      <th align=center width="70" height="30">部署</th>
      <th align=center width="70" height="30">システム管理</th>
      <th align=center width="70" height="30">資産管理</th>
    </tr>
  </thead>
  <tbody>
    
      <% @users.each do |user| %>
        <%= fields_for "users[]" ,user do |f| %>
          <tr>
            <td align=center height="30"><%= f.text_field :code %></td>
            <td align=center height="30"><%= f.text_field :name %></td>
            <td align=center height="30"><%= f.text_field :password %></td>
            <td align=center height="30"><%= f.collection_select(:department_id, Department.all, :id, :name) %></td>
            <td align=center height="30"><%= f.check_box :system %></td>
            <td align=center height="30"><%= f.check_box :admin %></td>
          </tr>
        <% end %>
      <% end %>
      
   
  </tbody>
</table>
 <% end %>
